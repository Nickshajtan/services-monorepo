{
  "name": "services-monorepo",
  "version": "1.0.0",
  "engines": {
    "node": "22.x"
  },
  "description": "Monorepo for services polyglot system",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "spdx:fix-all": "bash ./scripts/.license/add-spdx-headers.sh --all",
    "api:lint": "cd scripts/tools/api-tooling && yarn rest:lint && yarn webhooks:lint",
    "api:bundle": "cd scripts/tools/api-tooling && yarn rest:bundle && yarn webhooks:bundle",
    "api:async:lint": "cd scripts/tools/api-tooling && yarn async:lint",
    "api:async:bundle": "cd scripts/tools/api-tooling && yarn async:bundle",
    "api:gen:php": "cd scripts/tools/api-tooling && yarn rest:gen:php",
    "api:gen:graphql": "cd scripts/tools/api-tooling && yarn graphql:gen",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "format:prettier": "prettier . --write",
    "format:prettier:check": "prettier . --check",
    "lint": "yarn lint:eslint && yarn format:prettier:check",
    "lint:fix": "yarn lint:eslint:fix && yarn format:prettier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nickshajtan/services-monorepo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Nickshajtan/services-monorepo/issues"
  },
  "homepage": "https://github.com/Nickshajtan/services-monorepo#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "kleur": "^4.1.5",
    "node-fetch": "^3.3.2"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs}": [
      "eslint --fix"
    ],
    "**/*.{js,mjs,cjs,json,md,yml,yaml,html,css,scss,graphql,gql}": [
      "prettier --write"
    ],
    "**/*.sh": [
      "bash -n"
    ]
  }
}
