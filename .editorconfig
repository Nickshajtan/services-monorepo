# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml,json,js,jsx,ts,tsx,css,scss,md}]
indent_size = 2

[*.php]
indent_size = 4

[*.py]
indent_size = 4

[*.{java,kt,go,cs}]
indent_size = 4

[Makefile]
indent_style = tab
