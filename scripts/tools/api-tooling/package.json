{
  "name": "api-tooling",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "rest:lint": "redocly lint ../../../contracts/rest/public.yaml",
    "webhooks:lint": "redocly lint ../../contracts/webhooks/webhooks.yaml",
    "rest:bundle": "redocly bundle ../../../contracts/rest/public.yaml -o ../../../contracts/dist/openapi-public.yaml",
    "webhooks:bundle": "redocly bundle ../../../contracts/webhooks/webhooks.yaml -o ../../../contracts/dist/openapi-webhooks.yaml",
    "rest:gen:php": "openapi-generator-cli generate -c openapi-config/php-client.yml",
    "graphql:lint": "graphql-codegen --config openapi-config/graphql-codegen.yml --dry-run",
    "graphql:gen": "graphql-codegen --config openapi-config/graphql-codegen.yml"
  },
