{
  "defaults": {
    "provider": "openai",
    "model": "gpt-4.1-mini",
    "temperature": 0.2
  },
  "providers": {
    "openai": {
      "apiKeyEnv": "OPENAI_API_KEY",
      "baseUrl": null,
      "timeoutMs": 30000
    }
  },
  "routes": {
    "*.*.*": { "temperature": 0.3 },
    "devdocs.llm.*": { "instructions": "Be concise" },
    "devdocs.llm.query": {
      "model": "gpt-4.1",
      "instructions": "Be concise"
    },
    "devdocs.llm.doc": {
      "prompt": "Generate README for {{name}}...\n",
      "instructions": "Output only markdown"
    },
    "branding.image.default": {
      "model": "gpt-image-1",
      "background": "transparent",
      "outputFormat": "png",
      "size": "1024x1024"
    }
  }
}
