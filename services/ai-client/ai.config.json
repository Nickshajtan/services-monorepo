{
  "defaults": {
    "provider": "openai",
    "model": "gpt-4.1-mini",
    "temperature": 0.2
  },
  "providers": {
    "openai": {
      "apiKeyEnv": "OPENAI_API_KEY",
      "baseUrl": null,
      "timeoutMs": 30000
    }
  },
  "domains": {
    "devdocs": {
      "llm": {
        "query": { "model": "gpt-4.1", "instructions": "Be concise" },
        "doc": { "prompt": "Generate README {{name}}" }
      },
      "image": {
        "default": { "model": "gpt-image-1", "background": "transparent" }
      }
    }
  }
}
